{
    "name": "qile-yang-website",
    "version": "0.1.0",
    "scripts": {
        "deps": "npm install && bundle install",
        "build:css": "postcss ./assets/css/tailwind.css -o ./assets/css/style.css",
        "watch:css": "postcss ./assets/css/tailwind.css -o ./assets/css/style.css --watch",
        "start": "bundle exec jekyll serve",
        "dev": "npm run build:css && bundle exec jekyll serve --livereload --trace"
    },
    "dependencies": {
        "autoprefixer": "^10.4.20",
        "cssnano": "^7.0.6",
        "postcss": "^8.4.49",
        "postcss-cli": "^11.0.0"
    },
    "devDependencies": {
        "tailwindcss": "^3.4.15"
    }
}
